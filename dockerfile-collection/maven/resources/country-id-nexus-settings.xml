<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 https://maven.apache.org/xsd/settings-1.0.0.xsd">
   <servers>
        <server>
            <id>maven-3rdparty</id>
            <username>it.release</username>
            <password>release123</password>
        </server>
		<server>
            <id>maven-snapshots</id>
            <username>it.release</username>
            <password>release123</password>
        </server>
		<server>
            <id>maven-releases</id>
            <username>it.release</username>
            <password>release123</password>
        </server>
  </servers>
  <mirrors>
    <mirror>
        <id>nexus-id-mirror</id>
        <name>HCID Nexus</name>
        <mirrorOf>*</mirrorOf>
        <url>https://nexus.homecredit.id/maven</url>
    </mirror>
  </mirrors>
  <profiles>
	<profile>
      <id>hcid-configuration</id>
      <repositories>
        <repository>
           <id>mirror</id>
           <name>HCID Nexus</name>
           <url>https://nexus.homecredit.id/maven</url>
           <releases>
             <enabled>true</enabled>
           </releases>
           <snapshots>
             <enabled>true</enabled>
           </snapshots>
         </repository>
      </repositories>
      <properties>
        <releasator.repo.url>https://nexus.homecredit.id/repository/maven-releases/</releasator.repo.url>
        <releasator.snapshotrepo.url>https://nexus.homecredit.id/repository/maven-snapshots/</releasator.snapshotrepo.url>
      </properties>
    </profile>
	<profile>
        <id>sonar-id</id>
        <activation>
            <activeByDefault>true</activeByDefault>
        </activation>
        <properties>
			<sonar.host.url>https://sonar.homecredit.id</sonar.host.url>
			<sonar.login>xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx</sonar.login>
        </properties>
    </profile>
  </profiles>
    <activeProfiles>
        <activeProfile>hcid-configuration</activeProfile>
    </activeProfiles>
</settings>
